@page "/CaesarCipher"

<h1>Caesar Cipher</h1>

<p>Enter the message you want to encrypt:</p>
<input type="text" @bind="Message" />

<p>Enter the shift value:</p>
<input type="text" @bind="Shift" />

<button @onclick="EncryptMessage">Encrypt</button>

@if (EncryptedMessage != null)
{
    <p>Encrypted message: @EncryptedMessage</p>
}

@code {
    public string Message { get; set; }
    public int Shift { get; set; }
    public string EncryptedMessage { get; set; }

    public void EncryptMessage()
    {
        // Shift each character in the message by the specified amount
        char[] chars = Message.ToCharArray();
        for (int i = 0; i < chars.Length; i++)
        {
            chars[i] = (char)((chars[i] + Shift - 'a') % 26 + 'a');
        }

        EncryptedMessage = new string(chars);
    }
}